<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
    <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
    <!--<property name="hibernate.connection.url">jdbc:hsqldb:mem:agendaexames</property>-->
    <property name="hibernate.connection.url">jdbc:hsqldb:hsql://localhost/agendaexames</property>
    <property name="hibernate.connection.username">SA</property>
    <property name="hibernate.connection.password"></property>
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    <mapping class="com.arthurassuncao.bean.Usuario" />
  </session-factory>
</hibernate-configuration>
